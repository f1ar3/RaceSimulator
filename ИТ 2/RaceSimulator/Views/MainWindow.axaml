<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:RaceSimulator.ViewModels"
        x:Class="RaceSimulator.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Гоночный симулятор" Width="900" Height="600">

    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>

    <StackPanel Margin="10" Spacing="10">
        
        <!-- Кнопки управления -->
        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button Content="Добавить машину" Command="{Binding AddCarCommand}" />
            <Button Content="Добавить механика" Command="{Binding AddMechanicCommand}" />
            <Button Content="Добавить погрузчик" Command="{Binding AddLoaderCommand}" />
            <Button Content="Старт" Command="{Binding StartRaceCommand}" />
            <Button Content="Стоп" Command="{Binding StopRaceCommand}" />
        </StackPanel>

        <!-- Трасса (движущиеся машины) -->
        <Border BorderBrush="Gray" BorderThickness="1" Padding="5">
            <StackPanel>
                <TextBlock Text="Трасса" FontWeight="Bold" Margin="0,0,0,5"/>
                <ScrollViewer HorizontalScrollBarVisibility="Auto">
                    <Canvas Height="100" Background="LightGray">
                        <ItemsControl ItemsSource="{Binding Cars}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Ellipse Width="20" Height="20">
                                        <Ellipse.Fill>
                                            <SolidColorBrush Color="Red"/>
                                        </Ellipse.Fill>
                                        <Canvas.Left>
                                            <Binding Path="CanvasX"/>
                                        </Canvas.Left>
                                        <Canvas.Top>40</Canvas.Top>
                                    </Ellipse>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Canvas>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto">
            <!-- Список машин -->
            <Border BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="0,10,10,0">
                <StackPanel>
                    <TextBlock Text="Машины" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ListBox ItemsSource="{Binding Cars}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                                    <TextBlock Text="Позиция:" />
                                    <TextBlock Text="{Binding Position, StringFormat='0.0'}" />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Журнал событий -->
            <Border BorderBrush="Gray" BorderThickness="1" Padding="5" Grid.Column="1" Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="Журнал событий" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ListBox ItemsSource="{Binding Logs}" Height="200"/>
                </StackPanel>
            </Border>
        </Grid>

    </StackPanel>
</Window>
